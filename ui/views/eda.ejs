<%- include('layout', { 
    body: `
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-bar-chart text-info me-2"></i>
                Exploratory Data Analysis
            </h1>
            <p class="lead text-muted">
                Data insights and statistical analysis from the enrollment prediction dataset
            </p>
        </div>
    </div>

    <!-- Loading State -->
    <div id="eda-loading" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-3">Loading EDA results...</p>
    </div>

    <!-- EDA Content -->
    <div id="eda-content" class="d-none">
        <!-- Dataset Overview -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card stats-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Records</h6>
                                <h2 class="mb-0" id="total-records">--</h2>
                            </div>
                            <div class="icon-box bg-primary-subtle text-primary">
                                <i class="bi bi-database"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card stats-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Features</h6>
                                <h2 class="mb-0" id="total-features">--</h2>
                            </div>
                            <div class="icon-box bg-success-subtle text-success">
                                <i class="bi bi-layers"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card stats-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Enrollment Rate</h6>
                                <h2 class="mb-0" id="enroll-rate">--</h2>
                            </div>
                            <div class="icon-box bg-info-subtle text-info">
                                <i class="bi bi-percent"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card stats-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Data Sources</h6>
                                <h2 class="mb-0" id="data-sources">--</h2>
                            </div>
                            <div class="icon-box bg-warning-subtle text-warning">
                                <i class="bi bi-file-earmark-spreadsheet"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row 1 -->
        <div class="row g-4 mb-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Target Distribution</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="targetDistChart" height="250"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Enrollments by Region</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="regionChart" height="250"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row 2 -->
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Monthly Enrollment Trend</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="trendChart" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-building me-2"></i>Top Pharmacy Channels</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="channelChart" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feature Statistics Table -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-table me-2"></i>Feature Statistics</h5>
                        <input type="text" class="form-control form-control-sm w-25" id="feature-search" placeholder="Search features...">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="feature-stats-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Feature</th>
                                        <th>Type</th>
                                        <th>Count</th>
                                        <th>Missing %</th>
                                        <th>Mean</th>
                                        <th>Std</th>
                                        <th>Min</th>
                                        <th>Max</th>
                                    </tr>
                                </thead>
                                <tbody id="feature-stats-body">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Correlation Analysis -->
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-grid-3x3 me-2"></i>Top Feature Correlations</h5>
                    </div>
                    <div class="card-body">
                        <div id="correlation-list">
                            <!-- Populated by JS -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Data Quality Issues</h5>
                    </div>
                    <div class="card-body">
                        <div id="quality-issues">
                            <!-- Populated by JS -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error State -->
    <div id="eda-error" class="d-none">
        <div class="alert alert-danger text-center">
            <i class="bi bi-exclamation-triangle display-4"></i>
            <h4 class="mt-3">Failed to Load EDA Results</h4>
            <p>Please ensure the ML pipeline has been run and the Flask API is available.</p>
            <button class="btn btn-danger" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise me-2"></i>Retry
            </button>
        </div>
    </div>
    `,
    scripts: '<script src="/js/eda.js"></script>'
}) %>
