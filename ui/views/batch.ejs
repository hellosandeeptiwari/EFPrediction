<%- include('layout', { 
    body: `
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-collection text-success me-2"></i>
                Batch Prediction
            </h1>
            <p class="lead text-muted">
                Upload a CSV file to get predictions for multiple records at once
            </p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upload Section -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-upload me-2"></i>Upload Data</h5>
                </div>
                <div class="card-body">
                    <div class="upload-zone" id="upload-zone">
                        <input type="file" id="file-input" accept=".csv" class="d-none">
                        <div class="text-center py-5">
                            <i class="bi bi-cloud-arrow-up display-1 text-primary"></i>
                            <h5 class="mt-3">Drag & Drop CSV File</h5>
                            <p class="text-muted">or click to browse</p>
                            <button class="btn btn-outline-primary" id="browse-btn">
                                <i class="bi bi-folder2-open me-2"></i>Browse Files
                            </button>
                        </div>
                    </div>

                    <div id="file-info" class="mt-3 d-none">
                        <div class="alert alert-success d-flex align-items-center">
                            <i class="bi bi-file-earmark-spreadsheet fs-3 me-3"></i>
                            <div>
                                <strong id="file-name">filename.csv</strong>
                                <br>
                                <small id="file-size" class="text-muted">Size: 0 KB</small>
                            </div>
                            <button class="btn btn-sm btn-outline-danger ms-auto" id="remove-file">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h6>Required CSV Format:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Column</th>
                                        <th>Type</th>
                                        <th>Required</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><code>territory_id</code></td>
                                        <td>String</td>
                                        <td><i class="bi bi-check-circle text-success"></i></td>
                                    </tr>
                                    <tr>
                                        <td><code>segment</code></td>
                                        <td>String (HIGH/MEDIUM/LOW)</td>
                                        <td><i class="bi bi-check-circle text-success"></i></td>
                                    </tr>
                                    <tr>
                                        <td><code>power_score</code></td>
                                        <td>Float (0-1)</td>
                                        <td><i class="bi bi-circle text-muted"></i></td>
                                    </tr>
                                    <tr>
                                        <td><code>call_count</code></td>
                                        <td>Integer</td>
                                        <td><i class="bi bi-circle text-muted"></i></td>
                                    </tr>
                                    <tr>
                                        <td><code>meeting_count</code></td>
                                        <td>Integer</td>
                                        <td><i class="bi bi-circle text-muted"></i></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <button class="btn btn-primary btn-lg w-100 mt-3" id="predict-btn" disabled>
                        <i class="bi bi-play-circle me-2"></i>Run Batch Prediction
                    </button>
                </div>
            </div>
        </div>

        <!-- Results Section -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-table me-2"></i>Results</h5>
                    <button class="btn btn-sm btn-success d-none" id="download-btn">
                        <i class="bi bi-download me-2"></i>Download CSV
                    </button>
                </div>
                <div class="card-body">
                    <div id="results-placeholder" class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <p class="text-muted mt-3">Upload a CSV file and run predictions to see results</p>
                    </div>

                    <div id="results-loading" class="text-center py-5 d-none">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-3">Processing predictions...</p>
                        <div class="progress mt-3" style="height: 10px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" id="progress-bar" style="width: 0%"></div>
                        </div>
                    </div>

                    <div id="results-content" class="d-none">
                        <!-- Summary Stats -->
                        <div class="row g-3 mb-4">
                            <div class="col-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h4 class="mb-0 text-primary" id="total-records">0</h4>
                                    <small class="text-muted">Total Records</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h4 class="mb-0 text-success" id="enroll-count">0</h4>
                                    <small class="text-muted">Predicted Enrollments</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h4 class="mb-0 text-danger" id="no-enroll-count">0</h4>
                                    <small class="text-muted">Non-Enrollments</small>
                                </div>
                            </div>
                        </div>

                        <!-- Results Table -->
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-hover" id="results-table">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th>#</th>
                                        <th>Territory</th>
                                        <th>Segment</th>
                                        <th>Prediction</th>
                                        <th>Confidence</th>
                                    </tr>
                                </thead>
                                <tbody id="results-body">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sample Data Download -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-lightbulb me-3 fs-4"></i>
                <div>
                    <strong>Need a sample file?</strong>
                    <p class="mb-0">Download our sample CSV template to get started with batch predictions.</p>
                </div>
                <button class="btn btn-info ms-auto" id="download-sample">
                    <i class="bi bi-download me-2"></i>Download Sample CSV
                </button>
            </div>
        </div>
    </div>
    `,
    scripts: '<script src="/js/batch.js"></script>'
}) %>
